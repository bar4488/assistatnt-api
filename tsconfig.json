{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "*": ["node_modules/*", "src/typings/*"]
    },
    "strict": true
  },
  "exclude": ["node_modules", "aurora", "build", "src/driver/agensgraph/**/*"]
}
